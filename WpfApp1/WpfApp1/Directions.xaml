                <RadioButton Name ="radCardFare" Content="Stored Value Card" HorizontalAlignment="Left" Height="16" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.RowSpan="2" Width="115"/>
