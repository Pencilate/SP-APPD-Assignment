        <TextBox Name="txtBoxDisplay" HorizontalAlignment="Left" Height="340" Margin="290,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="468" ScrollViewer.HorizontalScrollBarVisibility="Auto"
